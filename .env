# Configurações do Agent

# Modelo Ollama a usar
OLLAMA_MODEL=mistral

# URL base do Ollama
OLLAMA_BASE_URL=http://localhost:11434

# Modelo de embeddings
EMBEDDINGS_MODEL=nomic-embed-text

# Caminho dos documentos
DOCS_PATH=./docs

# Máximo de iterações do agent
MAX_ITERATIONS=10

# Tamanho dos chunks para RAG
CHUNK_SIZE=1000

# Sobreposição dos chunks
CHUNK_OVERLAP=200

# Número de resultados a recuperar (k)
RETRIEVAL_K=3

# Timeout das requisições (segundos)
REQUEST_TIMEOUT=10

